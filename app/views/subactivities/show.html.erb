<h1><%= @subactivity.group_interest_phrase %></h1>
<br>
<h2><%= @subactivity.description %>
<br>
<br>
<h2>Created at: <%= @subactivity.created_month_day_year %></h2>
<br>
<h2>Latest update: <%= @subactivity.updated_month_day_year %></h2>
<br>


<h3>-----MEMBER LIST-----</h3>
<ul>
  <% @subactivity.all_users.each_with_index do |user, index| %>
    <li>
      <%= index + 1 %>.)
      <%= user.first_name %> <%= user.last_name %>:
      <%= link_to(user.email, user_path(user)) %><br>
    </li>
  <% end %>
</ul>
<br>

<section class="container">
    <div class="sandbox">
      <div class="column is-4">

          <%# byebug %>
          <% @subactivity.related_urls_hash(@subactivity.group_interest_phrase).first[1].each do |item| %>
          <div class="tile is-ancestor">
            <div class="tile is-parent">
              <article class="tile is-child notification is-white">

                <% if item["pagemap"] %>
                  <div class="is-flex is-horizontal-center">
                    <%= image_tag(item["pagemap"]["cse_thumbnail"][0]["src"]) %><br>
                  </div>
                <% else %>
                  <div class="is-flex is-horizontal-center">
                    <%= image_tag("https://encrypted-tbn2.gstatic.com/images?q=tbn:ANd9GcQcWaexBm3uDK3a32aSEYoZe-bCiusGnX1ana5bVPcg2XS8r8Qt6r5muwD2") %>
                  </div>
                <% end %>
                <div class="has-text-centered">
                  <a href="#{item["link"]}"><%= item["title"] %></a>
                </div>
                <div class="has-text-justified">
                  <p><%= item["snippet"] %></p>
                </div>
              </article>
            </div>
          </div>
          <% end %>

      </div>
    </div>
</section>

<% if is_admin? %>
  <%= link_to "Edit subactivity", edit_subactivity_path(@subactivity) %><br>
  <%= link_to "Delete subactivity", @subactivity, method: :delete %>
<% end %>
